// Global database schema for tenant metadata

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma/global"
}

datasource db {
  provider = "postgresql"
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  dbUrl     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tenants")
}
